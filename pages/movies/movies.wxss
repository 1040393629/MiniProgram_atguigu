/* pages/movies/movies.wxss */
.movieContainer{
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.movie_img{
  width: 128rpx;
  height: 128rpx;
}
.movie_detail{
  display: flex;
  flex-direction: column;
  width: 70%;
  margin-left: 20rpx; 
}
.movie_name{
  font-size: 32rpx;
  color: #000;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.movie_year{
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0 ;
}
.movie_director{
  font-size: 28rpx;
  color: #666;
}
.movie_mark{
  color: red;
}
